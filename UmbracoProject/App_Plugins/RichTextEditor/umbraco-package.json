{
  "name": "RichTextEditor Styles",
  "alias": "RichTextEditor",
  "extensions": [
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "RichTextEditor.Tiptap.StyleMenu",
      "name": "RichTextEditor Tiptap Style Menu",
      "meta": {
        "alias": "RichTextEditorStyleMenu",
        "icon": "icon-palette",
        "label": "My Text Styles"
      },
      "items": [
        {
          "label": "Headings",
          "items": [
            {
              "label": "Heading 01 – 50px Bold",
              "data": {
                "tag": "h1",
                "class": "onx-heading-1"
              }
            },
            {
              "label": "Heading 02 – 40px Bold",
              "data": {
                "tag": "h2",
                "class": "onx-heading-2"
              }
            },
            {
              "label": "Heading 03 – 30px Bold",
              "data": {
                "tag": "h3",
                "class": "onx-heading-3"
              }
            },
            {
              "label": "Heading 04 – 25px Bold",
              "data": {
                "tag": "h4",
                "class": "onx-heading-4"
              }
            },
            {
              "label": "Heading 05 – 22px SemiBold",
              "data": {
                "tag": "h5",
                "class": "onx-heading-5"
              }
            },
            {
              "label": "Heading 06 – 18px Bold",
              "data": {
                "tag": "h6",
                "class": "onx-heading-6"
              }
            }
          ]
        },
        {
          "label": "Body & Notes",
          "items": [
            {
              "label": "Body text – 14px Regular",
              "data": {
                "tag": "p",
                "class": "onx-body"
              }
            },
            {
              "label": "Note 1 – 13px Regular",
              "data": {
                "tag": "p",
                "class": "onx-note-1"
              }
            },
            {
              "label": "Note 2 – 13px SemiBold",
              "data": {
                "tag": "p",
                "class": "onx-note-2"
              }
            }
          ]
        },
        {
          "label": "Quotes",
          "items": [
            {
              "label": "Quote – 20px Light Italic",
              "data": {
                "tag": "p",
                "class": "onx-quote"
              }
            }
          ]
        }
      ]
    }
  ],
  "css": [
    "/css/richtext-styles.css"
  ]
}

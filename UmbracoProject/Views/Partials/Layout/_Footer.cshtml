@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    /* Get the root content and site settings */
    var rootContent = Umbraco.ContentAtRoot();
    /* Get the site settings */
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var footerText = siteSettings?.FooterText;
}

<footer class="site-footer">
    <div class="container">
        <div class="footer-content">
            @(footerText != null ? Html.Raw(footerText.ToString()) : "© Onatrix. All Rights Reserved. Credits to Themesflat")
        </div>
    </div>
</footer>
@using UmbracoProject.ViewModels
@model QuestionFormViewModel


@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionForm" }))
{
    <div class="question-form">
        <div class="question-form-del-1">
            <div class="form-group">
                <label asp-for="Name" class="form-label sr-only">Name</label>
                <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(m => m.Name)" class="form-control form-italic" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label sr-only">Email</label>
                <input asp-for="Email" type="email" placeholder="@Html.DisplayNameFor(m => m.Email)" class="form-control form-italic" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-area">
            <textarea asp-for="Message" placeholder="@Html.DisplayNameFor(m => m.Message)" class="form-control"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-submit">
            <button type="submit" class="form-btn">Submit</button>
        </div>
    </div>
}
@using UmbracoProject.ViewModels
@model CallbackFormViewModel


@using (Html.BeginUmbracoForm("HandleCallbackForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "callbackForm" }))
{
    <div class="callback-form">
        <div class="form-group">
            <label asp-for="Name" class="form-label sr-only">Name</label>
            <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(m => m.Name)" class="form-control form-italic" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label sr-only">Email</label>
            <input asp-for="Email" type="email" placeholder="@Html.DisplayNameFor(m => m.Email)" class="form-control form-italic" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="form-label sr-only">Phone Number</label>
            <input asp-for="Phone" type="tel" placeholder="@Html.DisplayNameFor(m => m.Phone)" class="form-control form-italic" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="SelectedOption" class="form-label sr-only"></label>
            <div class="form-select">
                <select asp-for="SelectedOption" class="select-option">
                    <option value="" disabled hidden selected>Please select an option</option>
                    @foreach (var option in Model.Options)
                    {
                        <option value="@option">@option</option>
                    }
    )
                </select>

                <span class="select-icon">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                         class="icon" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="SelectedOption" class="text-danger"></span>
        </div>
        <div class="form-submit">
            <button type="submit" class="form-btn">Submit</button>
        </div>
    </div>
}